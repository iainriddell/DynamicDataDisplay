    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"    
    Title="Simplest plot sample" Height="243" Width="416">

    <d3:ChartPlotter Name="plotter">
